<% if(isAuthenticated){ %>
  <form action="/cart" method="POST">
    <button type="submit" class="btn">Add To Cart</button>
    <% if(locals.csrfToken){ %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
    <% } %>
    <input type="hidden" name="productId" value="<%= product._id %>"/>
  </form>
<% } %>
