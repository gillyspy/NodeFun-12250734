<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if(locals.alertError && alertError.msg){ %>
    <div class="user-message user-message--error">
        <%= alertError.msg %>
    </div>
    <% } %>
        <form class="login-form" action="/auth/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                        class="<%= locals.errors && errors.find(e=> { return e.param === 'email'}) ? 'invalid' : '' %>"
                        type="email" name="email" id="email" value="<%= locals.seed? seed.email : '' %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= locals.errors && errors.find(e=>{ return  e.param === 'password'}) ? 'invalid' : '' %>"
                        type="password" name="password" id="password" value="<%= locals.seed? seed.password : '' %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= locals.errors && errors.find(e=>{ return e.param === 'confirmPassword'}) ? 'invalid' : '' %>"
                       type="password" name="confirmPassword" id="confirmPassword" value="<%= locals.seed ? seed.confirmPassword : '' %>">
            </div>
            <% if(locals.csrfToken){ %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <% } %>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
